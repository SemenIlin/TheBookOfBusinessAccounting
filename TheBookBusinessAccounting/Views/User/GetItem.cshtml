@model TheBookBusinessAccounting.Models.ItemViewModel

@{
    ViewBag.Title = "GetItem";
}

<div class="col-xs-offset-2">
	<h4>@Html.DisplayFor(model => model.Title)</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.InventoryNumber)
		</dt>

		<dd class="odd">
			@Html.DisplayFor(model => model.InventoryNumber)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.LocationOfItem)
		</dt>

		<dd class="even">
			@Html.DisplayFor(model => model.LocationOfItem)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.About)
		</dt>

		<dd class="odd">
			@Html.DisplayFor(model => model.About)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Category)
		</dt>

		<dd class="even">
			@Html.DisplayFor(model => model.Category)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Status)
		</dt>

		<dd class="odd">
			@Html.DisplayFor(model => model.Status)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ImageViewModels)
		</dt>
		@foreach (var image in Model.ImageViewModels)
		{
			<dd>
				@Html.Partial("Partial\\Image", image)
			</dd>
		}
	</dl>
	<div>
		@if (User.IsInRole("Editor"))
		{
			<p>
				<a href="@Url.Action("EditItem", "Editor", new { id = Model.Id })">Редактировать</a> |
			</p>
		}
		@Html.ActionLink("Назад", "Index")
	</div>	
</div>



