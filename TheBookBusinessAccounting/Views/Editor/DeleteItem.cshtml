@model TheBookBusinessAccounting.Models.ItemViewModel

@{
    ViewBag.Title = "DeleteItem";
}
<div class="col-xs-offset-3">
	<h3>Удалить предмет?</h3>

	<dl class="dl-horizontal block">
		<dt>
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.InventoryNumber)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.InventoryNumber)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.LocationOfItem)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.LocationOfItem)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.About)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.About)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Category)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Category)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Status)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Status)
		</dd>

		@foreach (var image in Model.ImageViewModels)
		{
			<dt>
				@Html.DisplayNameFor(model => model.ImageViewModels)
			</dt>

			<dd>
				@Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/jpeg;base64,"
										 + Convert.ToBase64String(image.Screen) + "\" />")
			</dd>
		}

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Удалить" class="btn btn-default" /> |	
				<a href="@Url.Action("Index", "User")">Назад</a>
		</div>
	}
</div>
