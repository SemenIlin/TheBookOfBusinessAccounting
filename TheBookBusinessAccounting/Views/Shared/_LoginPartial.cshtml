@if (Request.IsAuthenticated)
{
   using (Html.BeginForm("Logoff", "Account", FormMethod.Get, new { id = "logoutForm", @class = "navbar-right" }))
	{
		@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">			
			<li><a href="@Url.Action("Index","User")">Главная</a></li>
			<li><a href="@Url.Action("EditUser","User")">Настройки</a></li>
			<li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
			
		</ul>
	}
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li>@Html.ActionLink("Регистрация", "Registration", "Account")</li>
		<li>@Html.ActionLink("Вход", "Login", "Account")</li>
	</ul>
}
